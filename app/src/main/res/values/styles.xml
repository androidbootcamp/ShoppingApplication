<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="AppTheme" parent="android:Theme.Material.Light">
    <item name="android:actionBarStyle">@style/MyActionBar</item>
    <item name="android:textViewStyle">@style/TextViewStyle</item>
  </style>

  <style name="MyActionBar" parent="@android:style/Widget.Material.Light.ActionBar">
    <item name="android:background">#ff9900</item>
  </style>

  <style name="TextViewStyle" parent="@android:style/Widget.Material.Light.TextView">
    <item name="android:textColor">#229922</item>
  </style>

  <style name="TitleTextViewStyle" parent="@android:style/Widget.Material.Light.TextView">
    <item name="android:textColor">#222299</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">35dp</item>
    <item name="android:textIsSelectable">false</item>
  </style>
</resources>
